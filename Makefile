format:
	- . venv/bin/activate; \
	black .

setup-ubuntu:
	- python3.7 -m venv venv; \
	. venv/bin/activate; \
	pip install -r requirements.txt

setup-mac:
	- python3 -m venv venv; \
	. venv/bin/activate; \
	pip install -r requirements.txt

update:
	- . venv/bin/activate; \
	pip install -r requirements.txt

choose-game:
	- . venv/bin/activate; \
	python app.py
